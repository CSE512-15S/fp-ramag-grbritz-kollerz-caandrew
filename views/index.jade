extends layout

block content
  .row
    .col-md-12
      // h1 Visualizing the Spread of Rumors on Twitter

      .row
        .col-md-8#master
            #stream.bg-text(data-bg-text="stream graph")
                .svgContainer
            #spaghetti
                .svgContainer
                .controls
                    input(type='radio', name='scale-radio', id='scale-linear', value='true', data-bind='checked:isLinearScale.ForEditing')
                    label(for='scale-linear') &nbsp;Linear
                    br
                    input(type='radio', name='scale-radio', id='scale-log', value='false', data-bind='checked:isLinearScale.ForEditing')
                    label(for='scale-log') &nbsp;Log
        .col-md-4#detail
            #leaderboard.bg-text(data-bg-text="leaderboard")
            #tweetlist.bg-text(data-bg-text="tweetlist")